doctype html
html
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel='stylesheet' href='/styles/output.css')
        title= title
    body
        header
            .container.mx-auto.flex.items-center.justify-between.p-6.px-8
                .flex.flex-1
                    a(href="/" class="-m-1.5 p-1.5")
                        span.sr-only Your Company
                        img.h-8.w-auto(src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600")
                div(class="flex gap-x-12")
                    a(href="/" class="text-sm font-medium leading-6 text-gray-900") Home

                    if isAuthenticated 
                        a(href="/blogs" class="text-sm font-medium leading-6 text-gray-900") All Blog
                        a(href="/add-blog" class="text-sm font-medium leading-6 text-gray-900") Add Blog
                        a(href="/logout" class="text-sm font-medium leading-6 text-blue-900") Log Out
                    else
                        a(href="/login" class="text-sm font-medium leading-6 text-blue-900") Log in
                        a(href="/register" class="text-sm font-medium leading-6 text-blue-900") Register

        block content