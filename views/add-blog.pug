extends layout

block content
    div(class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8")
        div(class="sm:mx-auto sm:w-full sm:max-w-sm")
            img(class="mx-auto h-10 w-auto" src="https://tailwindui.com/plus/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company")
            h2(class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900") ADD BLOG

        div(class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm")
            form(class="space-y-6" action=`/add-blog` method="POST")
                div
                    label(for="title" class="block text-sm font-medium leading-6 text-gray-900") Blog Title
                    div(class="mt-2")
                        input(type="text" name="title" autocomplete="title" required class=" px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")
                div
                    label(for="imageUrl" class="block text-sm font-medium leading-6 text-gray-900") Blog Image
                    div(class="mt-2")
                        input(type="text" name="imageUrl" autocomplete="imageUrl" required class=" px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")
                div
                    label(for="body" class="block text-sm font-medium leading-6 text-gray-900") Blog Content
                    div(class="mt-2")
                        input(type="text" name="body" autocomplete="body" required class=" px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")

                div
                    label(for="author" class="block text-sm font-medium leading-6 text-gray-900") Blog Author
                    div(class="mt-2")
                        input(type="text" name="author" autocomplete="author" required class=" px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")

                div
                    label(for="categories" class="block text-sm font-medium leading-6 text-gray-900") Blog Categories
                    div(class="mt-2")
                        input(type="text" name="categories" autocomplete="categories" required class=" px-3 block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6")

                div
                    button(type="submit" value="submit" class="flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600") Kaydet