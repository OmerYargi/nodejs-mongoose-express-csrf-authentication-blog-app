extends layout

block content
    div(class="bg-white py-24 sm:py-32")
        div(class="mx-auto max-w-7xl px-6 lg:px-8")
            div(class="mx-auto lg:mx-0 flex justify-between items-center")
                div
                    h2(class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl") From the blog
                    p(class="mt-2 text-lg leading-8 text-gray-600") Learn how to grow your business with our expert advice.
                div
                    a.py-2.px-6.bg-blue-400.text-white.rounded.duration-300(href="/add-blog" class="hover:bg-blue-600") Add Blog
            div(class="mx-auto mt-10 grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 border-t border-gray-200 pt-10 sm:mt-16 sm:pt-16 lg:mx-0 lg:max-w-none lg:grid-cols-3")
                each item in blogData
                    article(class="flex max-w-xl flex-col items-start justify-between")
                        div(class="flex items-center gap-x-4 text-xs")
                            time(datetime=`${item.date.getFullYear()}-${item.date.getMonth()}, ${item.date.getDate()}` class="text-gray-500") #{item.date.getDate()} - #{item.date.getMonth()} - #{item.date.getFullYear()}
                            a(href=`/blog/edit/${item._id}` class="relative z-10 rounded-full bg-blue-50 px-3 py-1.5 font-medium text-blue-600 hover:bg-blue-100") Edit
                            a(href=`/blog/delete/${item._id}` class="relative z-10 rounded-full bg-red-50 px-3 py-1.5 font-medium text-red-600 hover:bg-red-100") Delete
                        div(class="group relative")
                            h3(class="mt-3 text-lg font-semibold leading-6 text-gray-900 group-hover:text-gray-600")
                                a(href=`/blog/${item._id}`) #{item.title}
                                    span(class="absolute inset-0")
                            p(class="mt-2 line-clamp-3 text-sm leading-6 text-gray-600") #{item.body}
                        div(class="relative mt-8 flex items-center gap-x-4")
                            img(src="/assets/image/resim1.jpg" class="h-10 w-10 rounded-full bg-gray-50 object-cover")
                            div(class="text-sm leading-6")
                                p(class="font-semibold text-gray-900")
                                    a(href="#") #{item.author}
                                        span(class="absolute inset-0")
                                p(class="text-gray-600") #{item.categories}